#include "main.h"

/**
 * print_sign - a functions to print the sign of a number
 *@n: the sign of the number to be printed
 * Return: 1 - if number is <0; 0 if n = 0; -1 if n is <0
 */

int print_sign(int n)
{
if (n > 0)
{
_putchar ('+');
return (1);
}
else if (n < 0)
{
_putchar ('-');
return (-1);
}
else
{
_putchar('0');
return (0);
}
} 
